{
  //PROVEEDOR DE CONFIGURACION para la base de datos 
  "Logging": { //Es un proveedor de configuracion y aqui estaran datos de confg. de la aplicacion 
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "information"
    }
  },
  // Configuracion para la base de datos. 
  //DATA SOURCE: Es para colocar la base de datos a utilizar
  // INITIAL CATALOG: Es para darle nombre a la base de datos 
  // INTEGRATED SECURITY: usar las credenciales de windows para autenticarse en el servidor de base de datos
  "ConnectionStrings": { // Localdb es un servidor de base de datos limitado que se instalo con Visual studio
    "defaultConnection": "Data source=(localdb)\\mssqllocaldb;Initial Catalog=CursoWebApis;Integrated Security= True"
  }
}
